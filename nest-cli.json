{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*",
        "exclude": "**/*.ts",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ]
  }
}
